{% extends 'base.html.twig' %}

{% block stylesheets %}
	<style>
		.hero {
			background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://example.com/kpop-background.jpg') no-repeat center center;
			background-size: cover;
		}
	</style>
{% endblock %}

{% block body %}
	<section class="hero is-medium is-primary">
		<div class="hero-body">
			<div class="container has-text-centered">
				<h1 class="title is-1">
					K-pop Music Quiz
				</h1>
				<h2 class="subtitle">
					Test your knowledge of K-pop hits and idols!
				</h2>
				<a href="#" class="button is-white is-outlined is-large">Start Quiz</a>
			</div>
		</div>
	</section>

	<section class="section">
		<div class="container">
			<div class="columns">
				<div class="column">
					<div class="box">
						<h3 class="title is-4">Diverse Questions</h3>
						<p>From classic hits to the latest releases, test your knowledge across all K-pop eras.</p>
					</div>
				</div>
				<div class="column">
					<div class="box">
						<h3 class="title is-4">Multiple Categories</h3>
						<p>Songs, idols, music videos, and more - challenge yourself in various K-pop categories!</p>
					</div>
				</div>
				<div class="column">
					<div class="box">
						<h3 class="title is-4">Global Leaderboard</h3>
						<p>Compete with K-pop fans worldwide and see how you rank among fellow enthusiasts.</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="section">
		<div class="container">
			<h2 class="title is-2 has-text-centered mb-6">How It Works</h2>
			<div class="columns is-centered">
				<div class="column is-3">
					<div class="has-text-centered">
						<span class="icon is-large">
							<i class="fas fa-user-plus fa-3x"></i>
						</span>
						<h3 class="title is-5 mt-4">1. Sign Up</h3>
						<p>Create your account to start quizzing and track your progress.</p>
					</div>
				</div>
				<div class="column is-3">
					<div class="has-text-centered">
						<span class="icon is-large">
							<i class="fas fa-music fa-3x"></i>
						</span>
						<h3 class="title is-5 mt-4">2. Choose a Category</h3>
						<p>Select from various K-pop themed categories or try a random mix.</p>
					</div>
				</div>
				<div class="column is-3">
					<div class="has-text-centered">
						<span class="icon is-large">
							<i class="fas fa-star fa-3x"></i>
						</span>
						<h3 class="title is-5 mt-4">3. Answer and Score</h3>
						<p>Test your knowledge, earn points, and climb the leaderboard!</p>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
